<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/bg_referral_item"
    android:layout_marginBottom="8dp">

    <!-- Position Number -->
    <TextView
        android:id="@+id/tvPosition"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="1"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/bg_position_circle"
        android:gravity="center"
        android:layout_marginEnd="12dp" />

    <!-- Referral Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvReferralName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvReferralDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joined 2 days ago"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Amount and Status -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tvReferralAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹10"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/tvReferralStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:textSize="12sp"
            android:textColor="@color/green"
            android:background="@drawable/bg_status_completed"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout> 