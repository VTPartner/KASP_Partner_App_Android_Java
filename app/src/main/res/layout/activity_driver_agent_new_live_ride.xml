<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toolbar_booking_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="#"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/booking_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp" />
        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_booking_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CRN #0"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/img_call"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/circle1"
                    android:padding="10dp"
                    android:src="@drawable/ic_call"
                    />

                <ImageView
                    android:id="@+id/navigate_btn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"

                    android:layout_marginStart="25dp"
                    android:background="@drawable/circle1"
                    android:padding="10dp"
                    android:src="@drawable/baseline_navigation_24"
                    app:tint="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Time"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_service_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="00:00:00"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/penaltyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Penalty: â‚¹0"
                android:textAlignment="center"
                android:textColor="@color/colorerror"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/lvl_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"

                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_customer_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="Customer Name"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/booking_timing"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            android:text="Sat, May 23,02:30 PM"

                            android:textColor="@color/colorgrey2"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_right"
                        android:drawableTint="@color/colorgrey3"
                        android:gravity="center"
                        android:text="$ 0"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_pin"
                        android:tint="@color/colorgreen" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:text="Pickup Address"
                            android:gravity="center|left"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/txt_pick_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="101-Motavarachha,surat"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/txt_sender_name_and_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sender "
                            android:textColor="@color/black"
                            android:textSize="12dp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_pin"
                        android:tint="@color/colorerror" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/txt_pickname"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:text="Drop Address"
                            android:gravity="center|left"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/txt_drop_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="101-Motavarachha,surat"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/txt_receiver_name_and_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Receiver "
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/txt_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0km"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="center|right"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="30 min"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:gravity="center|right"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PaymentType"
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/txt_payment_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textStyle="bold"

                            android:textColor="@color/black"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>





            <LinearLayout
                android:id="@+id/lvl_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_reject"
                    style="@style/Font"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/colorerror"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Cancel"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="12dp" />



                <TextView
                    android:id="@+id/btn_arrived"
                    style="@style/Font"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/colorgreen"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Arrived"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/btn_verify_otp"
                    style="@style/Font"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/colorgreen"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:text="Verify OTP"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/btn_send_trip"
                    style="@style/Font"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:text="Start Trip"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/btn_send_payment_details"
                    style="@style/Font"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/colorgreen"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:padding="5dp"
                    android:text="Send Payment details"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/btn_end_trip"
                    style="@style/Font"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/colorerror"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:text="End trip"
                    android:textColor="@color/white"
                    android:textSize="12dp" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>