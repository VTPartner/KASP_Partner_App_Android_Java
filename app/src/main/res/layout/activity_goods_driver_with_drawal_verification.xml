<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#F7F8FA">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_verification"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the 4-digits code to process your withdraw"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/et_code1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:gravity="center"
            android:textSize="24sp"
            android:maxLength="1"
            android:background="@drawable/otp_box"/>
        <EditText
            android:id="@+id/et_code2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:gravity="center"
            android:textSize="24sp"
            android:maxLength="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/otp_box"/>
        <EditText
            android:id="@+id/et_code3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:gravity="center"
            android:textSize="24sp"
            android:maxLength="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/otp_box"/>
        <EditText
            android:id="@+id/et_code4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:gravity="center"
            android:textSize="24sp"
            android:maxLength="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/otp_box"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Code"
        android:textColor="#2563FF"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Withdraw"
        android:layout_marginTop="32dp"
        android:backgroundTint="#2563FF"
        android:textColor="#FFF"/>
</LinearLayout>